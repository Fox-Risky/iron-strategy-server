{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8085
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "ws": {
                            "type": "websocket"
                        }
                    }
                }
            ]
      },
      {
        "type": "guest",
        "executable": "python",
        "arguments": ["-u", "auth/run.py", "ws://127.0.0.1:8085/ws"],
        "options": {
          "workdir": "..",
          "stdout": "log",
          "watch": {
            "directories": ["../auth"],
            "action": "restart"
          }
        }
      }
    ]
}
